<h1>Listing game_plays</h1>

<table>
  <thead>
    <tr>
      <th>Player room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @game_plays.each do |game_play| %>
      <tr>
        <td><%= game_play.player_room %></td>
        <td><%= link_to 'Show', game_play %></td>
        <td><%= link_to 'Edit', edit_game_play_path(game_play) %></td>
        <td><%= link_to 'Destroy', game_play, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game play', new_game_play_path %>
