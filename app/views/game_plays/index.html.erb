<div class="row">
  <div class="large-12 columns">
    <ul class="inline-list">
      <li><h3>Let's Hunt The Dreaded Golbin Sharky!</h3></li>
      <li><%= link_to "Instructions", static_pages_instructions_path, class: "round tiny button" %></li>
    </ul>
  </div>

</div>

<div class="row">
  <div class="large-3 columns ">
    <h5>Your Adventure History:</h5>
    <% @game_plays.reverse_order.each do |game_play| %>
        <tr>
          <% @monster = false%>
          <%@kracken = false%>
          <td><%= game_play.room_id %></td>
        </tr>

    <% end %>
  </div>


  <div class="large-8 columns">
    <p> You are currently in room: <%= @current_room.id %></p>
    <ul class="inline-list">
      <li> GS is in room <%= Room.find_by(goblin_shark: true).id %></li>
      <li> kracken: <%= Room.find_by(kracken: true).id %></li>
      <li> lochness: <%= Room.find_by(lochness_monster: true).id %></li>
      <li> ice: <%= Room.find_by(iceberg: true).id %></li>
      <li> whirlpool: <%= Room.find_by(whirlpool: true).id %></li>
    </ul>

    <%= status(@current_room) %>
    <% if @gameover %>
        <br>
        <%= link_to "Play Again!", root_path, class: "alert button" %>
    <% end %>

    <% if flash[:shoot] %>
        <%@gameover = true%>
        <div class="alert-box info-radius"><%=flash[:shoot] %></div>
        <%= button_to "New game?", {action: "restart"} %>
    <% end %>
    <% if flash[:miss] %>
        <div class="alert-box info-radius"><%=flash[:miss] %></div>
    <% end %>


    <%if @gameover != true && @monster == false%>
        <p><% senses %></p>
        <p><%= @sense if @sense != "" %></p>

            <h3>What room would you like to go to next?</h3>

            <ul class="inline-list">
              <li><%= button_to @current_room.room_options[0], {action: "new", params: {room_id: @current_room.room_options[0] }}, class: "round tiny button" %></li>
              <li><%= button_to @current_room.room_options[1], {action: "new", params: {room_id: @current_room.room_options[1] }}, class: "round tiny button" %></li>
              <li><%= button_to @current_room.room_options[2], {action: "new", params: {room_id: @current_room.room_options[2] }}, class: "round tiny button" %></li>
            </ul>
            <ul class="inline-list">
              <li><%= button_to "Shoot", {action: "shoot", params: {weapon: @current_room.room_options[0] }}, class: "round tiny button" %></li>
              <li><%= button_to "Shoot", {action: "shoot", params: {weapon: @current_room.room_options[1] }}, class: "round tiny button" %></li>
              <li><%= button_to "Shoot", {action: "shoot", params: {weapon: @current_room.room_options[2] }}, class: "round tiny button" %></li>
            </ul>

    <% end %>
  </div>
</div>
